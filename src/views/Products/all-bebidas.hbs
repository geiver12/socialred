<div class="col-md-12 mx-auto">
    <div class="card">
        <div class="card-header">
            <a href="/Products" class="btn btn-primary btn-lg active" role="button">Bebidas</a>
            <a href="#" class="btn btn-default btn-lg active" role="button">Perros</a>
        </div>
        <div class="card-body">
            <a href="/products/new-bebida" class="btn btn-primary btn-lg active" role="button">Nueva Bebida</a>
            <div class="table-responsive">

                <table id="userList" class="table table-bordered table-hover table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre bebida</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each bebidas}}
                        <tr>
                            <th scope="row"> </th>
                            <td>{{description}}</td>
                            <td>
                                <a href="/products/edit/{{id}} ">
                                <button class="btn btn-primary btn-block btn-sm">
                                        <i class="fas fa-edit"></i>
                                </button>
                                </a>
                            </td>
                            <td>
                                <form action="/products/delete/{{id}}?_method=DELETE" method="POST">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button class="btn btn-danger btn-block btn-sm" type="submit">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr {{/each}}>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>