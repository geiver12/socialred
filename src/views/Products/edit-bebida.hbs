<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Bebida</h3>
        </div>
        <div class="card-body">
            <form action="/products/edit-bebida/{{bebida.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <textarea name="description" id="" class="form-control" placeholder="Description">{{bebida.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                </div>
            </form>

        </div>
    </div>
</div>