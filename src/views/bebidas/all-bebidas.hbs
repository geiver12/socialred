<div class="col-md-12 mx-auto">
    <div class="card">

        <div class="card-body">
            <a href="/bebidas/new-bebida" class="btn btn-primary btn-lg active" role="button">Nueva Bebida</a>
            <div class="table-responsive">

                <table id="userList" class="table table-bordered table-hover table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Titulo</th>
                            <th scope="col">Descripcion</th>
                            <th scope="col">Precio</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each bebidas}}
                        <tr>
                            <td>
                                <img src="{{path}}" alt="Resource Unknown" id="sizetable" class=" card-img-top ">
                            </td>
                            <td>{{title}}</td>
                            <td>{{description}}</td>
                            <td>{{precio}}</td>
                            <td>
                                <a href="/bebidas/edit/{{id}} ">
                                    <button class="btn btn-primary btn-block btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </a>
                            </td>
                            <td>
                                <form action="/bebidas/delete/{{id}}?_method=DELETE" method="POST">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button class="btn btn-danger btn-block btn-sm" type="submit">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr {{/each}}>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>