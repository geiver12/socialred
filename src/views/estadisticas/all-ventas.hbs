<div class="row">
    <div class="col-md-12 offset-md-12">
        <div class="card">
            <div class="card-header">
                <h1 style="text-align: center;">Ventas del Dia</h1>
                <ul class="nav justify-content-center">
                    <li class="nav-item">
                        <a href="/estadisticas" class="btn btn-primary btn-lg active" role="button"
                            aria-pressed="true">Ventas</a>
                    </li>
                    <li class="nav-item">
                        <a href="/estadisticas/users" class="btn btn-secondary btn-lg active" role="button"
                            aria-pressed="true">Clientes</a>
                    </li>
                    <li class="nav-item">
                        <a href="/estadisticas/bebidas" class="btn btn-secondary btn-lg active" role="button"
                            aria-pressed="true">Productos</a>
                    </li>
                    
                </ul>

            </div>
        </div>
    </DIV>
</div>

<div class="col-md-12 mx-auto">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="userList" class="table table-bordered table-hover table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Factura</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Sucursal</th>
                            <th scope="col">Monto</th>
                            <th scope="col">Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each facturas}}
                        <tr>
                            <td>{{_id}}</td>
                            <td>{{user_nombre}}</td>
                            <td>{{user_apellido}}</td>
                            <td>{{sucursal_title}}</td>
                            <td>{{monto}}</td>
                            <td>{{fecha}}</td>
                        </tr {{/each}}>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
